<core:FragmentDefinition xmlns:html="http://www.w3.org/1999/xhtml" xmlns:layout="sap.ui.layout" xmlns="sap.m" xmlns:ui="sap.ui.table"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" class="sapUiNoPadding sapUiSizeCompact" displayBlock="true">
	<!--INITIAL SCREEN CODE-->
	Form Inputs
	<f:SimpleForm id="idMainForm" visible="true" editable="true" class="sapUiNoPadding sapUiSizeCompact" layout="ResponsiveGridLayout"
		maxContainerCols="4" columnsM="4" columnsL="4" columnsXL="4">
		<f:content>
			<core:Title text="Medallion"/>
			<Label text="{i18n>xtxt.Main.Form.Region}"/>
			<Input id="idRegion" showValueHelp="true"/>
			<core:Title text=""/>
			<Label text="{i18n>xtxt.Main.Form.Country}"/>
			<Input id="idCountry" showValueHelp="true"/>
			<core:Title text=""/>
			<Label text="{i18n>xtxt.Main.Form.Brt}"/>
			<Input id="idBrt" showValueHelp="true"/>
			<core:Title text=""/>
			<Label text="{i18n>xtxt.Main.Form.Division}"/>
			<Input id="idDivision" showValueHelp="true"/>
		</f:content>
	</f:SimpleForm>
	<!--Get Items into Table-->
	<Table id="idMedallionTable" visible="true" items="{tableItems>/Payload}" mode="SingleSelectLeft" class="sapUiNoPadding sapUiSizeCompact">
		<!--ToolBar for Buttons-->
		<headerToolbar>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button id="idCloneBtn" text="{i18n>xbtn.Main.TablHeader.Clone}" press="onClone" type="Emphasized"/>
				<Button id="idUpdateBtn" text="{i18n>xbtn.Main.TablHeader.Update}" press="onUpdate" type="Emphasized"/>
				<Button id="idNewBtn" text="{i18n>xbtn.Main.TablHeader.New}" press="onNew" type="Emphasized"/>
				<Button id="idGoBtn" text="{i18n>xbtn.Main.TablHeader.Go}" press="onGo" type="Emphasized"/>
				<Button id="idUpdateSaveBtn" text="Save" press="onUpdateSave" type="Emphasized" visible="False"/>
				<Button id="idUpdateCancelBtn" text="Cancel" press="onUpdateCancel" type="Default" visible="False"/>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<!--Columns with custom width-->
			<Column width="5%">
				<Text text="{i18n>xtlt.Main.TablColumn.Discount}"/>
			</Column>
			<Column width="5%">
				<Text text="{i18n>xtlt.Main.TablColumn.Variance}"/>
			</Column>
			<Column width="7%">
				<Text text="{i18n>xtlt.Main.TablColumn.From}"/>
			</Column>
			<Column width="7%">
				<Text text="{i18n>xtlt.Main.TablColumn.To}"/>
			</Column>
			<Column width="20%">
				<Text text="{i18n>xtlt.Main.TablColumn.Medallion}"/>
			</Column>
			<Column>
				<Text text="{i18n>xtlt.Main.TablColumn.Region}"/>
			</Column>
			<Column>
				<Text text="{i18n>xtlt.Main.TablColumn.Country}"/>
			</Column>
			<Column width="6%">
				<Text text="{i18n>xtlt.Main.TablColumn.Subregion}"/>
			</Column>
			<Column width="7%">
				<Text text="{i18n>xtlt.Main.TablColumn.BusinessUnit}"/>
			</Column>
			<Column width="7%">
				<Text text="{i18n>xtlt.Main.TablColumn.Division}"/>
			</Column>
			<Column width="6%">
				<Text text="{i18n>xtlt.Main.TablColumn.ModelPin}"/>
			</Column>
			<Column>
				<Text text="{i18n>xtlt.Main.TablColumn.Brt}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Input value="{tableItems>Discount}" editable="false"/>
					<Input value="{tableItems>Variance}" editable="false"/>
					<Input value="{tableItems>From}" editable="false"/>
					<Input value="{tableItems>To}" editable="false"/>
					<Input value="{tableItems>Medallion}" editable="false"/>
					<Input value="{tableItems>Region}" editable="false"/>
					<Input value="{tableItems>Country}" editable="false"/>
					<Input value="{tableItems>Subregion}" editable="false"/>
					<Input value="{tableItems>BusinessUnit}" editable="false"/>
					<Input value="{tableItems>Division}" editable="false"/>
					<Input value="{tableItems>ModelPIN}" editable="false"/>
					<Input value="{tableItems>BRT}" editable="false"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	<!--NEW MEDALLION SCREEN CODE-->
	<f:SimpleForm id="idNewMedallionForm" visible="false" editable="true" class="sapUiNoPadding sapUiSizeCompact">
		<f:toolbar>
			<Toolbar>
				<Button id="idBackBtn" icon="sap-icon://nav-back" press="onBack" type="Default"/>
				<ToolbarSpacer/>
				<Button id="idSaveBtn" text="{i18n>xbtn.NewMedallion.FormHeader.Save}" press="onSave" type="Emphasized"/>
				<Button id="idCancelBtn" text="{i18n>xbtn.NewMedallion.FormHeader.Cancel}" press="onCancel" type="Default"/>
			</Toolbar>
		</f:toolbar>
		<f:content>
			<!--First Column Field -->
			<core:Title text="{i18n>xtxt.NewMedallion.FormHeader.Keys}"/>
			<Label class="sapUiSmallMarginRight" text="{i18n>xlbl.NewMedallion.FormField.MedallionCat}" labelFor="idNewCategory"></Label>
			<Input id="idNewCategory" value="{FormModel>/Medallion}" width="70%" showValueHelp="true" required="true"></Input>
			<Label class="sapUiSmallMarginRight" text="{i18n>xlbl.NewMedallion.FormField.Region}"></Label>
			<Input id="idNewRegion" value="{FormModel>/Region}" width="70%" showValueHelp="true"></Input>
			<Label text="{i18n>xlbl.NewMedallion.FormField.Country}"></Label>
			<Input id="idNewCountry" value="{FormModel>/Country}" width="70%" showValueHelp="true"></Input>
			<Label text="{i18n>xlbl.NewMedallion.FormField.Subregion}"></Label>
			<Input id="idNewSubregion" value="{FormModel>/Subregion}" width="70%" showValueHelp="true"></Input>
			<Label text="{i18n>xlbl.NewMedallion.FormField.BusinessUnit}"></Label>
			<Input id="idNewBusinessUnit" value="{FormModel>/BusinessUnit}" width="70%"></Input>
			<Label text="{i18n>xlbl.NewMedallion.FormField.Division}"></Label>
			<Input id="idNewDivision" value="{FormModel>/Division}" width="70%" showValueHelp="true"></Input>
			<Label text="{i18n>xlbl.NewMedallion.FormField.ModelPin}"></Label>
			<Input id="idNewModelPin" value="{FormModel>/ModelPIN}" width="70%" showValueHelp="true"></Input>
			<Label text="{i18n>xlbl.NewMedallion.FormField.Brt}"></Label>
			<Input id="idNewBrt" value="{FormModel>/BRT}" width="70%" showValueHelp="true"></Input>
			<!--Second Column Field -->
			<core:Title text="{i18n>xtxt.NewMedallion.FormHeader.Discount}"/>
			<Label text="{i18n>xlbl.NewMedallion.FormField.Discount}" labelFor="idNewDiscount"></Label>
			<Input id="idNewDiscount" value="{FormModel>/Discount}" width="70%" required="true"></Input>
			<Label text="{i18n>xlbl.NewMedallion.FormField.Variance}" labelFor="idNewVariance"></Label>
			<Input id="idNewVariance" value="{FormModel>/Variance}" width="70%" required="true"></Input>
			<Label text="{i18n>xlbl.NewMedallion.FormField.ValidFrom}" labelFor="idNewValidFrom"></Label>
			<DatePicker id="idNewValidFrom" value="{
				path: '/date',
				type: 'sap.ui.model.type.Date',
				formatOptions: {
					style: 'short'
				}
			}" width="70%" required="true"/>
			<Label text="{i18n>xlbl.NewMedallion.FormField.ValidTo}" labelFor="idNewValidTo"></Label>
			<DatePicker id="idNewValidTo" value="{FormModel>/To}" width="70%" required="true"/>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>